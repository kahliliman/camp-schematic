<%- include("partials/header") %>

<div class="row">
  <div class="col-lg-12 header-spacing-32">
    <h1>Campgrounds</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 header-spacing-16">
    <h3>See our most beautiful Campgrounds!</h3>
  </div>
</div>

<div class="row" style="display: flex; flex-wrap: wrap;">
  <% campgrounds.forEach(function(item){ %>
  <div class="col-md-3 col-sm-6">
    <div class="card" style="width: 18rem; margin: 0px 24px 0px 0px;">
      <img src="<%= item.image %>" class="card-img-top" />
      <div class="card-body">
        <h5 class="card-title"><%= item.name %></h5>
      </div>
    </div>
  </div>

  <% }); %>
</div>

<a class="btn btn-primary" href="/campgrounds/new">Add new</a>
<%- include("partials/footer") %>
